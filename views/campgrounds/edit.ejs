<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center mb-4">Edit Campground</h1>
	<div class="col-6 offset-3">
		<form
			action="/campgrounds/<%=campground._id %>?_method=PUT"
			method="POST"
			class="validated-form"
			novalidate
		>
			<div class="mb-3">
				<label class="form-label" for="title">Add Title *</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="campground[title]"
					value="<%=campground.title%>"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="location">Add Location *</label>
				<input
					class="form-control"
					type="text"
					id="location"
					name="campground[location]"
					value="<%=campground.location%>"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required between 10 & 1000.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Add Price *</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="number"
						name="campground[price]"
						value="<%=campground.price%>"
						class="form-control"
						placeholder="0.00"
						id="price"
						aria-label="price-label"
						aria-describedby="price-label"
						min="10"
						max="1000"
						required
					/>
					<div class="valid-feedback">Looks good.</div>
					<div class="invalid-feedback">Required.</div>
				</div>
			</div>

			<!-- <div class="mb-3">
				<label class="form-label" for="image">Add Image</label>
				<input
					class="form-control"
					type="file"
					id="image"
					name="campground[image]"
				/>
			</div> -->
			<div class="mb-3">
				<label class="form-label" for="image">Add Image *</label>
				<input
					class="form-control"
					type="url"
					id="image"
					name="campground[image]"
					value="<%=campground.image%>"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Add Description *</label>
				<textarea
					class="form-control"
					type="text"
					id="description"
					name="campground[description]"
					rows="4"
					required
				>
          <%=campground.description%>
        </textarea>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3 mt-4">
				<button class="btn btn-info">Update</button>
			</div>
		</form>
		<!-- <a href="/campgrounds">All campgrounds</a> -->
		<a href="/campgrounds/<%= campground._id%>">Back</a>
	</div>
</div>
