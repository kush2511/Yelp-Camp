<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center mb-4">New Campground</h1>
	<div class="col-6 offset-3">
		<form
			action="/campgrounds"
			method="POST"
			class="validated-form"
			novalidate
			autocomplete="off"
		>
			<div class="mb-3">
				<label class="form-label" for="title">Add Title *</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="campground[title]"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="location">Add Location *</label>
				<input
					class="form-control"
					type="text"
					id="location"
					name="campground[location]"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Add Price *</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="number"
						name="campground[price]"
						class="form-control"
						placeholder="0.00"
						id="price"
						aria-label="price-label"
						aria-describedby="price-label"
						min="10"
						max="1000"
						required
					/>
					<div class="valid-feedback">Looks good.</div>
					<div class="invalid-feedback">Required with min 10 & max 1000.</div>
				</div>
			</div>

			<!-- <div class="mb-3">
				<label class="form-label" for="image">Add Image</label>
				<input
					class="form-control"
					type="file"
					id="image"
					name="campground[image]"
				/>
			</div> -->
			<div class="mb-3">
				<label class="form-label" for="image">Add Image *</label>
				<input
					class="form-control"
					type="url"
					id="image"
					name="campground[image]"
					required
				/>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Add Description *</label>
				<textarea
					class="form-control"
					type="text"
					id="description"
					name="campground[description]"
					rows="4"
					required
				></textarea>
				<div class="valid-feedback">Looks good.</div>
				<div class="invalid-feedback">Required.</div>
			</div>

			<div class="mb-3 mt-4">
				<button class="btn btn-success">Add Campground</button>
			</div>
		</form>
		<a href="/campgrounds">All campgrounds</a>
	</div>
</div>
